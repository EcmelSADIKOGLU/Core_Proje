@model List<WriterMessage>
<a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
    <i class="mdi mdi-email"></i>
    <span class="count bg-success"></span>
</a>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a href="/AdminMessage/MessageDetailsForInbox/@item.WriterMessageID" class="dropdown-item preview-item">
        <div class="preview-thumbnail">
            <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
        </div>
        <div class="preview-item-content">
            <p class="preview-subject ellipsis mb-1">@item.SenderName</p>
            <p class="text-muted mb-0"> @item.Date.ToString("dd-MM-yyyy") </p>
        </div>
    </a>
        
    }
    

    <div class="dropdown-divider"></div>
    <p class="p-3 mb-0 text-center">3 Yeni Mesaj</p>
</div>