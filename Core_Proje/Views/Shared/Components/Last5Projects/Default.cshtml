@model List<EntityLayer.Concrete.Portfolio>
<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Son 5 Proje</h4>
                <p class="text-muted mb-1">Tamamlanma Durumu</p>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="preview-list">
                        @{
                            int counter;
                            if (Model.Count>5){
                                counter = 4;
                            }else{
                                counter =  Model.Count - 1;
                            }
                            string status;
                        }
                        @for (int i = counter; i >= 0; i--)
                        {
                            if (Model[i].Value == 100)
                            {
                                status = "Tamamlandı";
                            }else
                            {
                                status = "Devam Ediyor";
                            }
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-primary">
                                        @*<i class="mdi mdi-file-document"></i>*@
                                        <img src="@Model[i].Platform">
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">@Model[i].Name</h6>
                                        <p class="text-muted mb-0">Ücret: @Model[i].Price</p>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-muted">@Model[i].Value</p>
                                        <p class="text-muted mb-0">@status</p>
                                    </div>
                                </div>
                            </div>
                        } 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>