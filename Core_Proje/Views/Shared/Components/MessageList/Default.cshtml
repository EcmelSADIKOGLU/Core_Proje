@model List<Message>
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Mesajlar</h4>
                <p class="text-muted mb-1 small"><a href="/ContactMessage/Index/">Tüm Mesajlar</a></p>
            </div>
            <div class="preview-list">
            @foreach (var item in Model)
            {
                <div class="preview-item border-bottom">
                    <div class="preview-thumbnail">
                            <img src="https://play-lh.googleusercontent.com/o6dPRYwSy7L6hh1uEOe0acbmLSOC1J0jw1ELXnqCjiO1dJShieC7uK2fipwAP2KXLKYx=s200" alt="image" class="rounded-circle" />
                    </div>
                    <div class="preview-item-content d-flex flex-grow">
                        <div class="flex-grow">
                            <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                <h6 class="preview-subject">@item.Name</h6>
                                <p class="text-muted text-small">@item.Date.ToString("dd-MM-yyyy")</p>
                            </div>
                            <p class="text-muted">@item.Content.Substring(0,30)...</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</div>
