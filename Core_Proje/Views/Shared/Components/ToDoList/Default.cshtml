@model List<EntityLayer.Concrete.ToDoList>
@{
    string completed = "";
    string cchecked = "";
}
<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yapılacak Listesi</h4>
            <div class="add-items d-flex">
                <input type="text" class="form-control todo-list-input" placeholder="Yapılacaklar...">
                <button class="add btn btn-primary todo-list-add-btn">Ekle</button>
            </div>
            <div class="list-wrapper">
                <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                    @foreach (var item in Model)
                    {
                        if (!item.Status)
                        {
                            completed = "completed";
                            cchecked = "checked";
                        }
                        else
                        {
                            completed = "";
                            cchecked = "";
                        }
                        <li class="@completed">
                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input class="checkbox" type="checkbox" @cchecked> @item.Content
                                </label>
                            </div>
                            <i class="remove mdi mdi-close-box"></i>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
