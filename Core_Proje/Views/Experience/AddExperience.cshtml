@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
                {

                    <form class="forms-sample">
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" class="form-control" name="Name">
                        </div>
                        <div class="form-group">
                            <label>Tarih</label>
                            <input type="text" class="form-control" name="Date">
                        </div>
                        <div class="form-group">
                            <label>Görsel URL</label>
                            <input type="text" class="form-control" name="ImageURL">
                        </div>

                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" name="Dercription" rows="6"></textarea>
                        </div>
                        <a href="/Experience/Index/" class="btn btn-outline-danger float-right ml-2">İptal</a>
                        <button type="submit" class="btn btn-outline-success  float-right">Ekle</button>

                    </form>

                }
            </div>
        </div>
    </div>
</div>
