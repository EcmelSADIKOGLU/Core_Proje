@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
                {
                    <form class="forms-sample">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ExperienceID, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Tarih</label>
                            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Görsel URL</label>
                            @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Açıklama</label>
                            @Html.TextAreaFor(x => x.Dercription, 6, 3, new { @class = "form-control" })
                        </div>
                        <a href="/Experience/Index/" class="btn btn-outline-danger float-right ml-2 ">İptal</a>
                        <button type="submit" class="btn btn-outline-success float-right">Kaydet</button>

                    </form>
                }
            </div>
        </div>
    </div>
</div>