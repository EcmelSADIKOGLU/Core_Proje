@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
                {
                    <form class="forms-sample">

                        @Html.HiddenFor(x => x.SkillID, new { @class = "form-control" })

                        <div class="form-group">
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Değer</label>
                            @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                        </div>
                        <a href="/Skill/Index/" class="btn btn-outline-danger float-right ml-2">İptal</a>
                        <button type="submit" class="btn btn-outline-success  float-right">Kaydet</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>