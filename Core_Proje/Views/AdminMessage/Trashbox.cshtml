@model List<WriterMessage>
@{
    ViewData["Title"] = "Trashbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 20%">Gönderen</th>
                                <th style="width: 20%">Konu</th>
                                <th style="width: 17%">Tarih</th>
                                <th style="width: 8%">Sil</th>
                                <th style="width: 10%">Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.WriterMessageID</td>
                                    <td>@item.SenderName</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                                    <td><a href="/AdminMessage/DeleteMessage/@item.WriterMessageID" class="btn btn-outline-danger">Sil</a></td>
                                    <td>
                                        <a href="/AdminMessage/RecycleMessage/@item.WriterMessageID" class="btn btn-outline-success">Geri Döndür</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

