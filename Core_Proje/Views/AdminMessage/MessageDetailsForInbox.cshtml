@model WriterMessage
@{
    ViewData["Title"] = "MessageDetailsForInbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gönderen</label>
                        @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gönderen (Mail)</label>
                        @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
                    </div>    
                    <div class="form-group">
                        <label>Konu</label>
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control" })
                    </div>

                    <a href="/AdminMessage/Inbox/" class="btn btn-outline-info float-right ml-3"> Kapat</a>
                    <a href="/AdminMessage/TrashMessage/@Model.WriterMessageID" class="btn btn-outline-danger float-right"> Sil</a>
                    
                </form>
            </div>
        </div>
    </div>
</div>

