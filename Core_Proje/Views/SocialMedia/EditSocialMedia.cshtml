@model SosialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post">
                    @Html.HiddenFor(x=>x.SosialMediaID)
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Name, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>URL</label>
                        @Html.TextBoxFor(x=>x.URL, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>İcon</label>
                        @Html.TextBoxFor(x=>x.Icon, new {@class = "form-control"})
                    </div>
                    <a href="/SocialMedia/Index/" class="btn btn-outline-info float-right ml-2">Kapat</a>
                    <button type="submit" class="btn btn-outline-success  float-right">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>


