@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Gönderen</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gönderen (Mail)</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
                    </div>

                    <a href="/ContactMessage/DeleteMessage/@Model.MessageID" class="btn btn-outline-danger float-right"> Mesajı Sil</a>
                </form>
            </div>
        </div>
    </div>
</div>

