@model List<EntityLayer.Concrete.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th width="7%"> # </th>
                                <th width="35%"> Ad Soyad </th>
                                <th width="23%"> Şirket </th>
                                <th width="23%"> Unvan </th>
                                <th width="8%"> Sil </th>
                                <th width="10%"> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.TestimonialID
                                    </td>
                                    <td>
                                        <img src="@item.ImageURL" alt="image" />
                                        <span class="pl-2">@item.ClientName</span>
                                    </td>
                                    <td> @item.Company </td>
                                    <td> @item.Title </td>
                                    <td> <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a> </td>
                                    <td> <a href="/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-success">Detaylar</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Testimonial/AddTestimonial/" class="btn btn-outline-info float-right">Yeni Referans Ekle</a>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>





