@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
                {


                    <form class="forms-sample">

                        @Html.HiddenFor(x => x.TestimonialID, new { @class = "form-control" })

                        <div class="form-group">
                            <label>Ad Soyad</label>
                            @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Şirket</label>
                            @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Resim Yolu</label>
                            @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Yorum</label>
                            @Html.TextAreaFor(x => x.Comment, 8, 3, new { @class = "form-control" })
                        </div>
                        <a href="/Testimonial/Index/" class="btn btn-outline-info float-right ml-2">Kapat</a>
                        <button type="submit" class="btn btn-outline-success  float-right">Kaydet</button>
                    </form>

                }
            </div>
        </div>
    </div>
</div>