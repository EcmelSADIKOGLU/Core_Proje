@model WriterMessage
@{
    ViewData["Title"] = "MessageDetailsForInbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj detayları</h4>
            <br />
            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Gönderen</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="SenderName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mail</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Sender">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Konu</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Detaylar</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="MessageContent"></textarea>
                </div>
            </form>
            <a href="/Writer/Message/TrashMessage/@Model.WriterMessageID" class="btn btn-outline-danger float-right">Mesajı Sil</a>
            <a href="/Writer/Message/AnswerMessage/@Model.WriterMessageID" class="btn btn-outline-info">Mesajı Cevapla</a>
            <br />
        </div>
    </div>
</div>

