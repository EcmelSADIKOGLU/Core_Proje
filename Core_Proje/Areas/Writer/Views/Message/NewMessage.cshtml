@model WriterMessage
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Mesaj</h4>
            <br />
            <form method="post" class="forms-sample">
         
                <div class="form-group">
                    <label for="exampleInputName1">Alıcının Maili</label>
                    <input type="email" class="form-control" id="exampleInputName1" asp-for="Receiver">
                    @Html.ValidationMessageFor(x=>x.Receiver, null,new {@class = "text-danger"})
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Konu</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Subject">
                    @Html.ValidationMessageFor(x=>x.Subject, null,new {@class = "text-danger"})
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Detaylar</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="MessageContent"></textarea>
                    @Html.ValidationMessageFor(x=>x.MessageContent, null,new {@class = "text-danger"})
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button class="btn btn-outline-info float-right">Mesajı Gönder</button>
            </form>
            
            <br />
        </div>
    </div>
</div>

